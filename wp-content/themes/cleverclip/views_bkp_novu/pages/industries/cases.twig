<section class="industries__cases">
  <div class="industries__cases__wrapper">
    {% for article in post.get_field('cases_list') %}
      <article class="industries__cases__article">
        <p class="industries__cases__article__label">
          {{ article.post.terms('industry')[0].name }}
        </p>

        <figure class="industries__cases__article__media">
          <img class="industries__cases__article__media__image" src="{{ article.post.thumbnail.src }}">
        </figure>

        <div class="industries__cases__article__content">
          <h2 class="industries__cases__article__title">
            {{ article.post.title }}
          </h2>

          {{ article.post.get_field('introduction') }}

          <footer class="industries__cases__article__footer">
            <a class="industries__cases__article__link" href="{{ article.post.link }}">
              {{ option['en_read_more'] }}
            </a>
          </footer>
        </div>
      </article>
    {% endfor %}
  </div>
</section>
