<section class="industries__topics">
  <div class="industries__topics__wrapper">
    <div class="industries__topics__articles">
      {% for topic in post.get_field('topics_list') %}
        <article class="industries__topics__article">
          <p class="industries__topics__article__number">
            {{ loop.index }}
          </p>

          <h2 class="industries__topics__article__title">
            {{ topic.title }}
          </h2>

          <div class="industries__topics__article__description">
            {{ topic.description }}
          </div>
        </article>
      {% endfor %}
    </div>

    <footer class="industries__topics__footer">
      <a class="industries__topics__button" href="{{ post.get_field('topics_button').url }}">
        <div class="industries__topics__button__background"></div>

        <div class="industries__topics__button__box">
          {{ post.get_field('topics_button').title }}
        </div>
      </a>
    </footer>
  </div>
</section>
