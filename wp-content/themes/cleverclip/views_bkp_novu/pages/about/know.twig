<section class="about__know">
  <div class="about__know__wrapper">
    <header class="about__know__header">
      <h2 class="about__know__title">
        {{ post.get_field('know_title') }}
      </h2>

      <p class="about__know__description">
        {{ post.get_field('know_description') }}
      </p>
    </header>

    <div class="about__know__list">
      {% for item in post.get_field('know_list') %}
        <article class="about__know__item">
          <a class="about__know__item__wrapper" href="{{ item.link.url }}">
            <div class="about__know__item__box">
              <img class="about__know__item__image" data-src="{{ item.image }}">

              <div class="about__know__item__content">
                <h2 class="about__know__item__title" data-height=".about__know__item__title">
                  {{ item.title }}
                </h2>

                <p class="about__know__item__description" data-height=".about__know__item__description">
                  {{ item.description }}
                </p>

                <div class="about__know__item__link">
                  <span class="about__know__item__link__text">
                    {{ item.link.title }}
                  </span>

                  <svg class="about__know__item__link__arrow" viewBox="0 0 22 15" xmlns="http://www.w3.org/2000/svg">
                    <path d="M0 7.5H20.5M20.5 7.5L14 1M20.5 7.5L14 14" stroke="#17238F"/>
                  </svg>
                </div>
              </div>
            </div>
          </a>
        </article>
      {% endfor %}
    </div>
  </div>
</section>
