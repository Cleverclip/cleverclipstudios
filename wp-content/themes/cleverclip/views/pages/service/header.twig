<header class="service__header {{ post.get_field('banner_vimeo') or post.get_field('banner_youtube') or post.get_field('banner_image') ? 'service__header__banner' : '' }}">
  <div class="service__header__background"></div>

   {% if post.get_field('banner_vimeo') or post.get_field('banner_youtube') or post.get_field('banner_image') %}
      <figure class="service__header__media__background" style="background-image:url({{ post.get_field('banner_image') ? post.get_field('banner_image') : '' }});">
        {% if post.get_field('banner_vimeo') %}
          <iframe src="https://player.vimeo.com/video/{{ post.get_field('banner_vimeo') }}?background=1?autoplay=1&loop=1&autopause=0" width="100%" height="100%" frameborder="0" allow="autoplay;"></iframe>
        {% elseif post.get_field('banner_youtube') %}
          <iframe src="https://www.youtube.com/embed/{{ post.get_field('banner_youtube') }}?autoplay=1&controls=0&loop=1showinfo=0&mute=1" width="100%" height="100%" frameborder="0"></iframe>
        {% endif %}
      </figure>
    {% endif %}

  <div class="service__header__wrapper">
    <h1 class="service__header__title">
      {{ post.title }}
    </h1>

    <div class="service__header__description">
      {{ post.content }}
    </div>

    {% if post.get_field('intro_button') %}
        <a class="service__header__button" href="{{ post.get_field('intro_button').url }}">
          <div class="service__header__button__background"></div>
          <div class="service__header__button__box">
            {{post.get_field('intro_button').title}}
          </div>
        </a>
    {% endif %}

    {% if post.get_field('header_vimeo') %}
      <figure class="service__header__media">
        <img class="service__header__media__image" data-src="{{ post.thumbnail.src | resize(1366) }}">

        {% if post.get_field('header_vimeo') %}
          <button class="service__header__media__button" data-embed-video="{{ post.get_field('header_vimeo') }}">
            Play
          </button>
        {% endif %}
      </figure>
     {% endif %}

  </div>
</header>
