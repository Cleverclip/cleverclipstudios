<section class="service__articles">
  <div class="service__articles__wrapper">
    <h2 class="service__articles__title">
      {{ post.get_field('related_articles_articles_title') }}
    </h2>
    {% for case in cases %}
      <article class="service__articles__case">
        <div class="service__articles__case__media">
          <img class="service__articles__case__image" data-src="{{ case.thumbnail.src | resize(800) }}">
        </div>

        <div class="service__articles__case__content">
          <p class="service__articles__case__description">
            {{ case.title }}
          </p>

          <a class="service__articles__case__link" href="{{ case.link }}">
            {{ option[locale ~ '_read_more'] }}
          </a>
        </div>
      </article>

      {% if loop.index0 == 2 %}
        <aside class="service__aside__video">
          <div class="service__aside__video__columns">
            <div class="service__aside__video__column">
              <h2 class="service__aside__video__title">
                {{ post.get_field('aside_video_title') }}
              </h2>
            </div>

            <div class="service__aside__video__column">
              <figure class="service__aside__video__media">
                <img class="service__aside__video__media__image" data-src="{{ post.get_field('aside_video_image') }}">
              </figure>
            </div>
          </div>

          <a class="service__aside__video__button" href="{{ post.get_field('aside_video_link').url }}">
            <div class="service__aside__video__button__background"></div>

            <div class="service__aside__video__button__box">
              {{ post.get_field('aside_video_link').title }}
            </div>
          </a>
        </aside>
      {% endif %}

      {% if loop.index0 == 4 %}
        <aside class="service__aside__newsletter">
          <h2 class="service__aside__newsletter__title">
            {{ post.get_field('aside_newsletter_title') }}
          </h2>

          <form
            class="service__aside__newsletter__form"
            data-id="{{ option['form_newsletter'] }}"
            data-success-title="{{ option[locale ~ '_form_newsletter_messages'].success_title }}"
            data-success-description="{{ option[locale ~ '_form_newsletter_messages'].success_description }}"
            data-error-title="{{ option[locale ~ '_form_newsletter_messages'].error_title }}"
            data-error-description="{{ option[locale ~ '_form_newsletter_messages'].error_description }}"
          >
            <input name="language" type="hidden" value="{{ function('pll_current_language', 'name') }}">
            <input name="country" type="hidden" value="{% filter shortcodes %}[geoip_detect2 property='country.name' default='Not Detected' lang='en']{% endfilter %}">

            <input name="utm_source" type="hidden" value="">
            <input name="utm_medium" type="hidden" value="">
            <input name="utm_campaign" type="hidden" value="">
            <input name="utm_content" type="hidden" value="">
            <input name="utm_term" type="hidden" value="">

            <input name="referrer" type="hidden" value="">

            <input name="smujarFirstVisit" type="hidden" value="">
            <input name="smujarFirstVisitTime" type="hidden" value="">
            <input name="smujarHistory" type="hidden" value="">

            <input class="service__aside__newsletter__input" name="email" placeholder="{{ post.get_field('aside_newsletter_input') }}" type="email">

            <button class="service__aside__newsletter__button">
              <div class="service__aside__newsletter__button__background"></div>

              <div class="service__aside__newsletter__button__box">
                {{ post.get_field('aside_newsletter_button') }}
              </div>
            </button>
          </form>
        </aside>
      {% endif %}
    {% endfor %}
  </div>
</section>
