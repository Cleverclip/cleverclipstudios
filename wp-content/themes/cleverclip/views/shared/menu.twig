<div id="menu__form__overlay">

  <form class="menu__contact__form"
        method="post"
        data-id="{{ option['form_contact_header'] }}"
        data-success-title="{{ option[locale ~ '_form_contact_messages'].success_title }}"
        data-success-description="{{ option[locale ~ '_form_contact_messages'].success_description }}"
        data-error-title="{{ option[locale ~ '_form_contact_messages'].error_title }}"
        data-error-description="{{ option[locale ~ '_form_contact_messages'].error_description }}"
        id="menu__form__container">

    <h1 class="menu__form__title">{{ option[locale ~ '_contact_title'] }}</h1>
    <div id="menu__form__close"></div>
    <input name="language" type="hidden" value="{{ function('pll_current_language', 'name') }}">
    <input name="country" type="hidden"
           value="{% filter shortcodes %}[geoip_detect2 property='country.name' default='Not Detected' lang='en']{% endfilter %}">

    <input name="utm_source" type="hidden" value="">
    <input name="utm_medium" type="hidden" value="">
    <input name="utm_campaign" type="hidden" value="">
    <input name="utm_content" type="hidden" value="">
    <input name="utm_term" type="hidden" value="">

    <input name="referrer" type="hidden" value="">

    <input name="smujarFirstVisit" type="hidden" value="">
    <input name="smujarFirstVisitTime" type="hidden" value="">
    <input name="smujarHistory" type="hidden" value="">

    <div class="menu__contact__form__row">
      <input class="menu__contact__form__input" name="first-name"
             placeholder="{{ option[locale ~ '_contact_form'].first_name }}">
      <input class="menu__contact__form__input" name="last-name"
             placeholder="{{ option[locale ~ '_contact_form'].last_name }}">
    </div>

    <div class="menu__contact__form__row">
      <input class="menu__contact__form__input" name="company"
             placeholder="{{ option[locale ~ '_contact_form'].company }}">
      <input class="menu__contact__form__input" name="phone" placeholder="{{ option[locale ~ '_contact_form'].phone }}">
    </div>

    <div class="menu__contact__form__row">
      <input class="menu__contact__form__input menu__contact__form__input--email" name="email"
             placeholder="{{ option[locale ~ '_contact_form'].email }}">
    </div>

    <div class="menu__contact__form__row">
      <select class="menu__contact__form__input menu__contact__form__input--select" name="subject">
        <option
            value="{{ option[locale ~ '_contact_form'].subject }}">{{ option[locale ~ '_contact_form'].subject }}</option>
        {% for subject in option[locale ~ '_contact_form'].subjects %}
          <option>{{ subject.text }}</option>
        {% endfor %}
      </select>
    </div>

    <div class="menu__contact__form__row">
      <textarea class="menu__contact__form__input menu__contact__form__input--textarea" name="message"
                placeholder="{{ option[locale ~ '_contact_form'].message }}"></textarea>
    </div>

    <div class="menu__contact__form__row">
      <label class="menu__contact__form__label">
        <input class="menu__contact__form__checkbox" name="newsletter" type="checkbox">
        <span class="menu__contact__form__checkbox__bullet"></span>

        <span class="menu__contact__form__checkbox__text">
          {{ option[locale ~ '_contact_form'].newsletter }}
        </span>
      </label>
    </div>

    <button type="submit" class="menu__contact__form__button">
      <div class="menu__contact__form__button__background"></div>

      <div class="menu__contact__form__button__box">
        {{ option[locale ~ '_contact_form'].submit }}
      </div>
    </button>
  </form>
</div>