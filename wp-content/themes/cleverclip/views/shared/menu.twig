<nav class="menu">
  <button class="menu__toggle">
    <span class="menu__toggle__text">
      Menu
    </span>
  </button>

  <div class="menu__wrapper">
    <a class="menu__logo" href="{{ site.link }}/{{ function('pll_current_language') }}/">
      <img class="menu__logo__image menu__logo__image--desktop"
           data-src="{{ site.theme.link ~ '/images/cleverclip.svg' }}">
      <img class="menu__logo__image menu__logo__image--phone"
           data-src="{{ site.theme.link ~ '/images/cleverclip-phone.svg' }}">
    </a>

    <ul class="menu__list">
      {% for item in option[locale ~ '_menu_list'] %}
        {% if item.type == 'link' %}
          <li class="menu__item">
            {% if item.links %}
              <button class="menu__link menu__link__dropdown">
                {{ item.link.title }}
              </button>
            {% else %}
              <a class="menu__link" href="{{ item.link.url }}">
                {{ item.link.title }}
              </a>
            {% endif %}

            {% if item.links %}
              <div class="menu__dropdown">
                <div class="menu__dropdown__wrapper">
                  <ul class="menu__dropdown__list">
                    {% for link in item.links %}
                      <li class="menu__dropdown__item">

                        <a class="menu__dropdown__link" href="{{ link.link.url }}">
                          <img class="menu__dropdown__link__image" data-src="{{ link.image }}">

                          <div class="menu__dropdown__link__caption">
                            <div>{{ link.link.title }}</div>{% if loop.index == 1 %}
                            <div class="submenu__link__dropdown"></div> {% endif %}</div>
                        </a>

                        {% if link.sublinks %}
                          <div class="menu__subdropdown">
                            <div class="menu__subdropdown__wrapper">
                              <ul class="menu__subdropdown__list">
                                {% for sublink in link.sublinks %}
                                  <li class="menu__subdropdown__item">
                                    <a class="menu__subdropdown__link" href="{{ sublink.link.url }}">
                                      <img class="menu__subdropdown__link__image" data-src="{{ sublink.image }}">

                                      {{ sublink.link.title }}
                                    </a>
                                  </li>
                                {% endfor %}
                              </ul>
                            </div>
                          </div>
                        {% endif %}
                      </li>
                    {% endfor %}
                  </ul>
                </div>
              </div>
            {% endif %}
          </li>
        {% elseif item.type == 'button' %}
          <li class="menu__item">
            <a class="menu__button" {% if item.link.url == "#contact" %}id="menu__form__button"
               {% else %}href="{{ item.link.url }}"{% endif %}>
              <div class="menu__button__background"></div>

              <div class="menu__button__box">
                {{ item.link.title }}
              </div>
            </a>
          </li>
        {% endif %}
      {% endfor %}

